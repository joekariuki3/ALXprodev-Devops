#!/usr/bin/bash

# This script fetches data from a public API and saves it to a file.
# If the API call fails, it logs the error to a separate file.

MY_POKEMON="caterpie"
API_URL="https://pokeapi.co/api/v2/pokemon/$MY_POKEMON"
HEADER="Accept: application/json"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

curl -X GET "$API_URL" -H "$HEADER" -o "$OUTPUT_FILE"

if [ $? -ne 0 ]; then
    echo "Failed to fetch data from API" >> "$ERROR_FILE"
    exit 1
fi