#!/usr/bin/bash

# This script extracts data from a JSON file and formats it for output.

JSON_FILE="data.json"

# Check if the JSON file exists
if [ ! -f "$JSON_FILE" ]; then
    echo "JSON file not found: $JSON_FILE"
    exit 1
fi

name=$(jq -r '.name' "$JSON_FILE")
formatted_height=$(jq -r '.height' "$JSON_FILE")
formatted_weight=$(jq -r '.weight' "$JSON_FILE")
type=$(jq -r '.types[0].type.name' "$JSON_FILE")

# Print the extracted information using awk for formatting
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall." | awk -F' ' '{printf "%s is of type %s, weighs %.2fkg, and is %.2fm tall.\n", $1, $5, $7, $10}'


