#!/usr/bin/bash

# This script extracts specific fields from a JSON file using jq and formats the output with awk.
# NR is used to track the line number in the output of jq.
# NR==1, NR==2, and NR==3 represent the first, second, and third line of the output, respectively.

JSON_FILE="data.json"

# Check if the JSON file exists
if [ ! -f "$JSON_FILE" ]; then
    echo "JSON file not found: $JSON_FILE"
    exit 1
fi

jq '.name, .height, .weight, .types[0].type.name' "$JSON_FILE" | awk 'NR==1 {name=$1} NR==2 {height=$1} NR==3 {weight=$1} NR==4 {type=$1} END {printf "%s is of type %s, weighs %skg, and is %sm tall.\n", name, type, weight, height}'
